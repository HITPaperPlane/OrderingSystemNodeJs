<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <title>User Management - Admin</title>
</head>
<body>
    {{> navbar loginUser=loginUser}}

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    {{> sidebar}}
                </div>
                <div class="col-md-9">
                    <div class="card m-3 p-3">
                        <div class="d-flex align-items-center">
                            <h4 class="flex-grow-1">Users</h4>
                            <a class="btn btn-sm btn-secondary" href="/dashboard">Back</a>
                        </div>
                        <hr>

                        {{#if editSuccess}}
                        <div class="alert alert-success">Users profiles updated</div>
                        {{/if}}

                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone Number</th>
                                    <th>Address</th>
                                    <th>Role</th>
                                    <th>Operation</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td>
                                        {{#if this.photo}}
                                        <img src="/static/userImages/{{this.photo}}" style="width:50px; height:50px; border-radius:50%;" alt="photo">
                                        {{else}}
                                        <img src="/static/image/review/review-1.jpg" style="width:50px; height:50px; border-radius:50%;" alt="no photo">
                                        {{/if}}
                                    </td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.phone}}</td>
                                    <td>{{this.address}}</td>
                                    <td>{{this.type}}</td>
                                    <td>
                                        <!-- edit user profiles -->
                                        <a class="btn btn-sm btn-warning" href="/admin/editUser/{{this.id}}">Edit</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{#unless users.length}}
                        <p>No matching</p>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
