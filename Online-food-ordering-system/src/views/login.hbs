<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>

<body>
    {{> navbar}}

    <section class="container-fluid">
        <div class="register-banner">
            <div class="container">
                <div class="row mb-5 pb-5">
                    <div class="col-md-6 mt-5 mb-5">
                        <div class="register-form p-4 shadow">
                            <div class="text-center">
                                <h2 class="primary-color">Login to your Account</h2>
                            </div>
                            <form class="form" action="/loginUser" method="post">
                                <div class="mx-2">
                                    <input type="text" class="form-control mt-3" name="email" placeholder="Please enter email" required>
                                    <input type="password" class="form-control mt-3" name="password" placeholder="Please enter password" required>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="main-btn mt-3 mx-4 mb-1">LOG IN</button>
                                </div>
                            </form>

                            <div class="mt-3 text-center">
                              <small>New to Golden Bowl? <a href="/register">Register</a></small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{#if invalid}}
        <script>
            Swal.fire({
                title: 'Login Failed',
                text: 'Email or password is incorrect. Please try again.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        </script>
        {{/if}}

        {{#if logout}}
        <script>
            Swal.fire({
                title: 'Logout Successfully',
                icon: 'success',
                confirmButtonText: 'ok'
            });
        </script>
        {{/if}}

        {{#if loginFirst}}
        <script>
            Swal.fire({
                title: 'Please Login First',
                text: 'Please login first to access the page.',
                icon: 'info',
                confirmButtonText: 'ok'
            });
        </script>
        {{/if}}

        {{#if newRegister}}
        <script>
            Swal.fire({
                title: 'Register Successfully',
                text: 'Please login to access your account.',
                icon: 'success',
                confirmButtonText: 'ok'
            });
        </script>
        {{/if}}

    </section>
</body>
</html>
